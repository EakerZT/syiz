{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "declaration": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "lib/**/*",
    "example/**/*",
  ]
}
